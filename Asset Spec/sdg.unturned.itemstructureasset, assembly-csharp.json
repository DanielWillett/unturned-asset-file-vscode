{
    "$schema": "./Asset Spec Schema.json",
    "Type": "SDG.Unturned.ItemStructureAsset, Assembly-CSharp",
    "DisplayName": "Structure Item",
    "Parent": "SDG.Unturned.ItemPlaceableAsset, Assembly-CSharp",
    "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html",
    "Category": "ITEM",
    "VanillaIdLimit": 2000,
    "RequireId": true,
    "Properties":
    [
        {
            "Key": "Has_Clip_Prefab",
            "Type": "Boolean",
            "Description": "Whether or not this structure defines a 'Clip' prefab in Unity.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "DefaultValue": true,
            "Priority": 2
        },
        {
            "Key": "PlacementPreviewPrefab",
            "Type":
            {
                "Type": "MasterBundleReferenceString",
                "BaseType": "UnityEngine.GameObject, UnityEngine.CoreModule"
            },
            "DefaultValue": null,
            "Description": "Overrides the placement preview model spawned when this item is held.",
            "Variable": "placementPreviewRef",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "Priority": 2
        },
        {
            "Key": "PlacementAudioClip",
            "Type":
            {
                "Type": "MasterBundleReferenceString",
                "BaseType": "UnityEngine.AudioClip, UnityEngine.AudioModule"
            },
            "Description": "The sound played when this structure is placed.",
            "DefaultValue": null,
            "Variable": "use",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "Priority": 2
        },
        {
            "Key": "Construct",
            "Type": "SDG.Unturned.EConstruct, Assembly-CSharp",
            "Required": true,
            "Description": "The type of structure to construct,",
            "Variable": "construct",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "Priority": 95
        },
        {
            "Key": "Health",
            "Type": "UInt16",
            "Description": "This structure's maximum health.",
            "Variable": "health",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "DefaultValue": 0,
            "Required": true,
            "MinimumExclusive": 0,
            "Priority": 2
        },
        {
            "Key": "Range",
            "Type": "Float32",
            "Description": "Maximum distance away the player can place the structure.",
            "Variable": "range",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "DefaultValue": 0.0,
            "Required": true,
            "Minimum": 0.0,
            "Priority": 2
        },
        {
            "Key": "Explosion",
            "Type":
            {
                "Type": "LegacyAssetReferenceString",
                "AssetType": "SDG.Unturned.EffectAsset, Assembly-CSharp"
            },
            "DefaultValue": "00000000000000000000000000000000",
            "Description": "Effect played when this structure is destroyed.",
            "Variable": "explosionGuid",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "Priority": 1
        },
        {
            "Key": "Can_Be_Damaged",
            "Type": "Boolean",
            "DefaultValue": true,
            "Description": "If this structure is damagable.",
            "Variable": "canBeDamaged",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "Priority": 1
        },
        {
            "Key": "Eligible_For_Pooling",
            "Type": "Boolean",
            "DefaultValue": true,
            "Description": "If this structure can be pooled (reused).",
            "Variable": "eligibleForPooling",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Requires_Pillars",
            "Type": "Boolean",
            "DefaultValue": true,
            "Description": "Whether or not a valid wall placement requires pillars.",
            "Variable": "requiresPillars",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "InclusiveWith":
            [
                {
                    "Key": "Construct",
                    "Value": "*",
                    "Condition":
                    {
                        "Or":
                        [
                            {
                                "Variable": "Construct",
                                "Operation": "eq",
                                "Comparand": "WALL"
                            },
                            {
                                "Variable": "Construct",
                                "Operation": "eq",
                                "Comparand": "RAMPART"
                            }
                        ],
                        "Value": true
                    }
                }
            ]
        },
        {
            "Key": "Vulnerable",
            "Type": "Flag",
            "DefaultValue": false,
            "Description": "Indicates that this structure can be damaged by weapons that don't have the @(SDG.Unturned.ItemWeaponAsset, Assembly-CSharp::Invulnerable) flag.",
            "Variable": "isVulnerable",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Unrepairable",
            "Type": "Flag",
            "DefaultValue": false,
            "Description": "Indicates that this structure can not be repaired by melee items such as the Blowtorch.",
            "Variable": "isRepairable",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Proof_Explosion",
            "Type": "Flag",
            "DefaultValue": false,
            "Description": "Indicates that this structure is immune to explosion damage.",
            "Variable": "proofExplosion",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Unpickupable",
            "Type": "Flag",
            "DefaultValue": false,
            "Description": "Indicates that this structure can't be salvaged.",
            "Variable": "isUnpickupable",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Salvage_Duration_Multiplier",
            "Type": "Float32",
            "DefaultValue": 1.0,
            "Description": "Multiplier for the amount of time it takes to salvage this structure.",
            "Variable": "salvageDurationMultiplier",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Unsalvageable",
            "Type": "Flag",
            "DefaultValue": false,
            "Description": "Indicates that this structure will not drop items when salvaged.",
            "Variable": "isSalvageable",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Unsaveable",
            "Type": "Flag",
            "DefaultValue": false,
            "Description": "Indicates that this structure will not be saved when the world is saved.",
            "Variable": "isSaveable",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Armor_Tier",
            "Type": "SDG.Unturned.EArmorTier, Assembly-CSharp",
            "IncludedDefaultValue": null,
            "DefaultValue":
            [
                {
                    "Or":
                    [
                        {
                            "Variable": "#This.AssetName",
                            "Operation": "contains",
                            "Comparand": "Metal"
                        },
                        {
                            "Variable": "#This.AssetName",
                            "Operation": "contains",
                            "Comparand": "Brick"
                        }
                    ],
                    "Value": "HIGH"
                },
                {
                    "Value": "LOW"
                }
            ],
            "Description": "Indicates which armor multiplier this structure uses from the gameplay configuration file.",
            "Variable": "armorTier",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties"
        },
        {
            "Key": "Foliage_Cut_Radius",
            "Type": "Float32",
            "Description": "The radius (in meters) around the structure where foliage is removed.",
            "Variable": "foliageCutRadius",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "DefaultValue": 6.0,
            "Minimum": 0.0
        },
        {
            "Key": "Terrain_Test_Height",
            "Type": "Float32",
            "Description": "The maximum distance (in meters) the pivot point of this floor can be placed above terrain.",
            "Variable": "terrainTestHeight",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/structure-asset.html#structure-asset-properties",
            "DefaultValue": 10.0,
            "Minimum": 0.0,
            "InclusiveWith":
            [
                {
                    "Key": "Construct",
                    "Value": "*",
                    "Condition":
                    {
                        "Or":
                        [
                            {
                                "Variable": "Construct",
                                "Operation": "eq",
                                "Comparand": "FLOOR"
                            },
                            {
                                "Variable": "Construct",
                                "Operation": "eq",
                                "Comparand": "FLOOR_POLY"
                            }
                        ],
                        "Value": true
                    }
                }
            ]
        }
    ],
    "Types":
    [
        {
            "Type": "SDG.Unturned.EConstruct, Assembly-CSharp",
            "DisplayName": "Structure Type",
            "Values":
            [
                {
                    "Value": "FLOOR",
                    "Casing": "Floor",
                    "Description": "A square floor/foundation that other structures are placed on."
                },
                {
                    "Value": "WALL",
                    "Casing": "Wall",
                    "Description": "A wall placed between two pillars."
                },
                {
                    "Value": "RAMPART",
                    "Casing": "Rampart",
                    "Description": "A half-wall placed between two pillars."
                },
                {
                    "Value": "ROOF",
                    "Casing": "Roof",
                    "Description": "A square roof that can act as a ceiling or floor."
                },
                {
                    "Value": "PILLAR",
                    "Casing": "Pillar",
                    "Description": "A support structure placed on the corners of floors and roofs required to place walls and ramparts."
                },
                {
                    "Value": "POST",
                    "Casing": "Post",
                    "Description": "A half-height pillar placed on the corners of floors and roofs required to place ramparts."
                },
                {
                    "Value": "FLOOR_POLY",
                    "Casing": "Floor_Poly",
                    "Description": "A triangular floor/foundation that other structures are placed on."
                },
                {
                    "Value": "ROOF_POLY",
                    "Casing": "Roof_Poly",
                    "Description": "A triangular roof that can act as a ceiling or floor."
                }
            ]
        }
    ],
    "BundleAssets":
    [
        {
            "AssetName": "Clip",
            "Description": "The structure object loaded on dedicated servers. This object should not contain renderers usually.",
            "Type": "UnityEngine.GameObject, UnityEngine.CoreModule",
            "Variable": "structure",
            "Required": "@Has_Clip_Prefab"
        },
        {
            "AssetName": "Structure",
            "Description": "The structure object loaded in-game and on dedicated servers if @Has_Clip_Prefab is false.",
            "Type": "UnityEngine.GameObject, UnityEngine.CoreModule",
            "Variable": "structure",
            "Required": true
        },
        {
            "AssetName": "Nav",
            "Description": "The collider used for zombie and animal navigation.",
            "Type": "UnityEngine.GameObject, UnityEngine.CoreModule",
            "Variable": "nav"
        },
        {
            "AssetName": "Use",
            "RedirectableAssetKey": "PlacementAudioClip",
            "Type": "UnityEngine.AudioClip, UnityEngine.AudioModule",
            "Description": "The sound played when this structure is placed.",
            "Variable": "use",
            "Required": true
        }
    ]
}