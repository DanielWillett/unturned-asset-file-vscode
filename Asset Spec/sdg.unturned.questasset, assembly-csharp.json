{
    "$schema": "./Asset Spec Schema.json",
    "Type": "SDG.Unturned.QuestAsset, Assembly-CSharp",
    "DisplayName": "NPC Quest",
    "Parent": "SDG.Unturned.Asset, Assembly-CSharp",
    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/quest-asset.html",
    "Category": "NPC",
    "VanillaIdLimit": 2000,
    "RequireId": true,
    "Properties":
    [
        {
            "Key": "Bypass_ID_Limit",
            "Type": "Flag",
            "DefaultValue": false,
            "Description": "Allows IDs to be less than 2000 if this isn't the vanilla bundle."
        },
        {
            "Key": "Conditions",
            "Type":
            {
                "Type": "List",
                "ElementType": "SDG.Unturned.INPCCondition, Assembly-CSharp",
                "Mode": "LegacyList, ModernList"
            },
            "DefaultValue": [ ],
            "Description": "Conditions that must be met for this quest to be able to be turned in.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/quest-asset.html#conditions-and-rewards",
            "Variable": "conditionsList"
        },
        {
            "Key": "Rewards",
            "Type":
            {
                "Type": "List",
                "ElementType": "SDG.Unturned.INPCReward, Assembly-CSharp",
                "Mode": "LegacyList, ModernList"
            },
            "DefaultValue": [ ],
            "Description": "Rewards granted when a player turns in this quest.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/quest-asset.html#conditions-and-rewards",
            "Variable": "rewardsList"
        },
        {
            "Key": "AbandonmentRewards",
            "Type":
            {
                "Type": "List",
                "ElementType": "SDG.Unturned.INPCReward, Assembly-CSharp",
                "Mode": "LegacyList, ModernList"
            },
            "DefaultValue": [ ],
            "Description": "Rewards granted when a player abandons the quest without completing it.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/quest-asset.html#conditions-and-rewards",
            "Variable": "abandonmentRewardsList"
        }
    ],
    "Localization":
    [
        {
            "Key": "Name",
            "Type":
            {
                "Type": "String",
                "SupportsRichText": true
            },
            "Required": true,
            "DefaultValue": "Name",
            "Description": "Localized display name of the quest.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/quest-asset.html#localization",
            "Variable": "questName"
        },
        {
            "Key": "Description",
            "Type":
            {
                "Type": "String",
                "SupportsRichText": true,
                "SupportsNewLines": true
            },
            "Required": true,
            "DefaultValue": "Description",
            "Description": "Localized description of the quest.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/quest-asset.html#localization",
            "Variable": "questDescription"
        }
    ]
}