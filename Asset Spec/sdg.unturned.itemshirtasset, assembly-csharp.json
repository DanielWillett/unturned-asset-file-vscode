{
    "$schema": "./Asset Spec Schema.json",
    "Type": "SDG.Unturned.ItemShirtAsset, Assembly-CSharp",
    "DisplayName": "Shirt Item",
    "Parent": "SDG.Unturned.ItemBagAsset, Assembly-CSharp",
    "Docs": "https://docs.smartlydressedgames.com/en/stable/items/shirt-asset.html",
    "Category": "ITEM",
    "VanillaIdLimit": 2000,
    "RequireId": true,
    "Properties":
    [
        {
            "Key": "Has_1P_Character_Mesh_Override",
            "Type": "Boolean",
            "Description": "Whether or not to load a first-person character mesh replacement.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/character-mesh-replacement.html",
            "Variable": "characterMeshOverride1pLODs",
            "DefaultValue": false
        },
        {
            "Key": "Character_Mesh_3P_Override_LODs",
            "Type": "UInt16",
            "Description": "Number of LODs to load for a third-person character mesh replacement. If zero no replacement will be loaded.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/character-mesh-replacement.html",
            "Variable": "characterMeshOverride3pLODs",
            "DefaultValue": 0,
            "CountForTemplateGroup": "shirt-3p-character-mesh-overrides"
        },
        {
            "Key": "Has_Character_Material_Override",
            "Type": "Boolean",
            "Description": "Whether or not to load a replacement material for the first-person and third-person character mesh.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/character-mesh-replacement.html",
            "Variable": "characterMaterialOverride",
            "DefaultValue": false
        },
        {
            "Key": "Ignore_Hand",
            "Type": "Flag",
            "Description": "This shirt should ignore the player's left-handed setting.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/items/shirt-asset.html#shirt-asset-properties",
            "Variable": "ignoreHand",
            "DefaultValue": false
        }
    ],
    "BundleAssets":
    [
        {
            "Key": "Shirt",
            "Type": "UnityEngine.Texture2D, UnityEngine.CoreModule",
            "Variable": "shirt",
            "Description": "Albedo texture for the shirt displayed on the player model.",
            "Required": true
        },
        {
            "Key": "Emission",
            "Type": "UnityEngine.Texture2D, UnityEngine.CoreModule",
            "Variable": "emission",
            "Description": "Emission texture for the shirt displayed on the player model."
        },
        {
            "Key": "Metallic",
            "Type": "UnityEngine.Texture2D, UnityEngine.CoreModule",
            "Variable": "metallic",
            "Description": "Metallic texture for the shirt displayed on the player model."
        },
        {
            "Key": "Character_Mesh_1P_Override_0",
            "Aliases": [ "Character_Mesh_Override_0" ],
            "Type": "UnityEngine.GameObject, UnityEngine.CoreModule",
            "Variable": "characterMeshOverride1pLODs",
            "Description": "First-person character mesh replacement.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/character-mesh-replacement.html",
            "Required": "@Has_1P_Character_Mesh_Override"
        },
        {
            "Key": "Character_Mesh_3P_Override_*",
            "Aliases": [ "Character_Mesh_Override_*" ],
            "Template": true,
            "TemplateGroups": [ "shirt-3p-character-mesh-overrides" ],
            "Required": true,
            "Type": "UnityEngine.GameObject, UnityEngine.CoreModule",
            "Variable": "characterMeshOverride3pLODs",
            "Description": "First-person character mesh replacement.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/character-mesh-replacement.html"
        },
        {
            "Key": "Character_Material_Override",
            "Type": "UnityEngine.Material, UnityEngine.CoreModule",
            "Variable": "characterMaterialOverride",
            "Description": "First-person character mesh replacement.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/character-mesh-replacement.html",
            "Required": "@Has_Character_Material_Override"
        }
    ]
}