{
    "$schema": "./Asset Spec Schema.json",
    "Type": "SDG.Unturned.DialogueAsset, Assembly-CSharp",
    "DisplayName": "Dialogue",
    "Parent": "SDG.Unturned.Asset, Assembly-CSharp",
    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html",
    "Category": "NPC",
    "VanillaIdLimit": 2000,
    "RequireId": false,
    "Properties":
    [
        {
            "Key": "Bypass_ID_Limit",
            "Type": "Flag",
            "DefaultValue": false,
            "Description": "Allows IDs to be less than 2000 if this isn't the vanilla bundle."
        },
        {
            "Key": "Messages",
            "Type":
            {
                "Type": "List",
                "ElementType": "SDG.Unturned.DialogueMessage, Assembly-CSharp",
                "Mode": "LegacyList"
            },
            "DefaultValue": [ ],
            "Description": "List of messages defined in this dialogue. Messages are the entry-point of a dialogue, where the first message that passes it's condition check is shown to the player.",
            "Variable": "messages",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#messages"
        },
        {
            "Key": "Responses",
            "Type":
            {
                "Type": "List",
                "ElementType": "SDG.Unturned.DialogueMessage, Assembly-CSharp",
                "Mode": "LegacyList",
                "CountType": "UInt8"
            },
            "DefaultValue": [ ],
            "Description": "The number of responses defined in this dialogue. Messages can reference responses by index to indicate which responses are shown per message.",
            "Variable": "responses",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#responses"
        }
    ],
    "Types":
    [
        {
            "Type": "SDG.Unturned.DialogueMessage, Assembly-CSharp",
            "DisplayName": "Dialogue Message",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#messages",
            "Properties":
            [
                {
                    "Key": "Pages",
                    "Type":
                    {
                        "Type": "List",
                        "ElementType":
                        {
                            "Type": "String",
                            "SupportsRichText": true,
                            "SupportsNewLines": true,
                            "ExtraTags": [ "<name_npc>", "<name_char>", "<pause>" ]
                        },
                        "ElementContext": "Localization",
                        "Mode": "LegacyList",
                        "CountType": "UInt8",
                        "LegacyDefaultElementTypeValue": "#Self.Key"
                    },
                    "DefaultValue": [ ],
                    "MaximumExclusive": "@(SDG.Unturned.DialogueAsset, Assembly-CSharp::Responses)",
                    "Description": "The localized text on each page of this message.",
                    "Variable": "pages",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#localization"
                },
                {
                    "Key": "Responses",
                    "Type":
                    {
                        "Type": "List",
                        "CountType": "UInt8",
                        "Mode": "LegacyList",
                        "ElementType": "UInt8"
                    },
                    "DefaultValue": 0,
                    "Maximum": "@SDG.Unturned.DialogueAsset, Assembly-CSharp::Responses",
                    "Description": "List of responses for this message. Responses appear as buttons for the player to answer an NPC. Note that only either @(SDG.Unturned.DialogueMessage, Assembly-CSharp::Responses) or @(SDG.Unturned.DialogueResponse, Assembly-CSharp::Messages) can be used, not both.",
                    "Variable": "responses",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#messages"
                },
                {
                    "Key": "Prev",
                    "Type":
                    {
                        "Type": "LegacyAssetReferenceString",
                        "AssetType": "SDG.Unturned.DialogueAsset, Assembly-CSharp"
                    },
                    "DefaultValue": "00000000-0000-0000-0000-000000000000",
                    "Description": "The GUID or short ID of the previous dialogue page of message #(Self.TemplateGroups[0]). The player will be returned to this dialogue if no responses are available.",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#messages",
                    "Variable": "prevGuid"
                },
                {
                    "Key": "FaceOverride",
                    "Type": "FaceIndex",
                    "DefaultValue": null,
                    "Description": "The index of an overridden face image to use during message #(Self.TemplateGroups[0]).",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#messages",
                    "Variable": "faceOverride"
                },
                {
                    "Key": "Conditions",
                    "Type":
                    {
                        "Type": "List",
                        "ElementType": "SDG.Unturned.INPCCondition, Assembly-CSharp",
                        "Mode": "LegacyList, ModernList"
                    },
                    "DefaultValue": [ ],
                    "Description": "Conditions that must be met for message #(Self.TemplateGroups[0]) to be shown.",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/conditions.html",
                    "Variable": "conditions"
                },
                {
                    "Key": "Rewards",
                    "Type":
                    {
                        "Type": "List",
                        "ElementType": "SDG.Unturned.INPCReward, Assembly-CSharp",
                        "Mode": "LegacyList, ModernList"
                    },
                    "DefaultValue": [ ],
                    "Description": "Rewards applied before viewing message #(Self.TemplateGroups[0]).",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/rewards.html",
                    "Variable": "rewards"
                }
            ]
        },
        {
            "Type": "SDG.Unturned.DialogueResponse, Assembly-CSharp",
            "DisplayName": "Dialogue Response",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#responses",
            "Properties":
            [
                {
                    "Key": "Messages",
                    "Type":
                    {
                        "Type": "List",
                        "CountType": "UInt8",
                        "Mode": "LegacyList",
                        "ElementType": "UInt8"
                    },
                    "DefaultValue": 0,
                    "Maximum": "@SDG.Unturned.DialogueAsset, Assembly-CSharp::Responses",
                    "Description": "List of messages this response should come after. Responses appear as buttons for the player to answer an NPC. Note that only either @(SDG.Unturned.DialogueMessage, Assembly-CSharp::Responses) or @(SDG.Unturned.DialogueResponse, Assembly-CSharp::Messages) can be used, not both.",
                    "Variable": "messages",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#responses"
                },
                {
                    "Key": "Dialogue",
                    "Type":
                    {
                        "Type": "LegacyAssetReferenceString",
                        "AssetType": "SDG.Unturned.DialogueAsset, Assembly-CSharp"
                    },
                    "DefaultValue": "00000000-0000-0000-0000-000000000000",
                    "Description": "The dialogue to open after the player selects response @dialogue-responses.",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#responses",
                    "Variable": "dialogueGuid",
                    "ExclusiveWith": [ "Quest", "Vendor" ]
                },
                {
                    "Key": "Quest",
                    "Type":
                    {
                        "Type": "LegacyAssetReferenceString",
                        "AssetType": "SDG.Unturned.QuestAsset, Assembly-CSharp"
                    },
                    "DefaultValue": "00000000-0000-0000-0000-000000000000",
                    "Description": "The quest to start after the player selects response @dialogue-responses.",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#responses",
                    "Variable": "questGuid",
                    "ExclusiveWith": [ "Dialogue", "Vendor" ]
                },
                {
                    "Key": "Vendor",
                    "Type":
                    {
                        "Type": "LegacyAssetReferenceString",
                        "AssetType": "SDG.Unturned.VendorAsset, Assembly-CSharp"
                    },
                    "DefaultValue": "00000000-0000-0000-0000-000000000000",
                    "Description": "The vendor (shop) to open after the player selects response @dialogue-responses.",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#responses",
                    "Variable": "vendorGuid",
                    "ExclusiveWith": [ "Dialogue", "Quest" ]
                },
                {
                    "Key": "Conditions",
                    "Type":
                    {
                        "Type": "List",
                        "ElementType": "SDG.Unturned.INPCCondition, Assembly-CSharp",
                        "Mode": "LegacyList, ModernList"
                    },
                    "DefaultValue": [ ],
                    "Description": "Conditions that must be met for response #(Self.TemplateGroups[0]) to be shown.",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/conditions.html",
                    "Variable": "conditions"
                },
                {
                    "Key": "Rewards",
                    "Type":
                    {
                        "Type": "List",
                        "ElementType": "SDG.Unturned.INPCReward, Assembly-CSharp",
                        "Mode": "LegacyList, ModernList"
                    },
                    "DefaultValue": [ ],
                    "Description": "Rewards applied before viewing response #(Self.TemplateGroups[0]).",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/rewards.html",
                    "Variable": "rewards"
                }
            ],
            "Localization":
            [
                {
                    "Key": "#This.Key",
                    "Type":
                    {
                        "Type": "String",
                        "SupportsRichText": true,
                        "SupportsNewLines": true,
                        "ExtraTags": [ "<name_npc>", "<name_char>" ]
                    },
                    "Required": true,
                    "Description": "The text shown for response #(Self.TemplateGroups[0]).",
                    "Docs": "https://docs.smartlydressedgames.com/en/stable/npcs/dialogue-asset.html#localization",
                    "Variable": "text"
                }
            ]
        }
    ]
}