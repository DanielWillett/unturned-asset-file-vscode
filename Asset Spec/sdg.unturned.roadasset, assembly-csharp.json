{
    "$schema": "./Asset Spec Schema.json",
    "Type": "SDG.Unturned.RoadAsset, Assembly-CSharp",
    "DisplayName": "Road Material",
    "Parent": "SDG.Unturned.Asset, Assembly-CSharp",
    "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html",
    "Category": "NONE",
    "RequireId": false,
    "Properties":
    [
        {
            "Key": "TexturePath",
            "Type":
            {
                "Type": "MasterBundleReferenceString",
                "BaseType": "UnityEngine.Texture2D, UnityEngine.CoreModule"
            },
            "Description": "The diffuse texture used on the surface of the road.",
            "DefaultValue": null,
            "Variable": "RoadTexture",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html#doc-assets-road-texturepath"
        },
        {
            "Key": "Width",
            "Type": "Float32",
            "MinimumExclusive": 0.0,
            "DefaultValue": 0.0,
            "Required": true,
            "Description": "The total horizontal size of the road in meters before it starts to taper off. Note that legacy road width was measured from the center, which would be half this value.",
            "Variable": "Width",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html#doc-assets-road-width"
        },
        {
            "Key": "Depth",
            "Type": "Float32",
            "MinimumExclusive": 0.0,
            "DefaultValue": 0.0,
            "Required": true,
            "Description": "The total height of the road model in meters. Note that legacy road depth was measured from the center, which would be half this value.",
            "Variable": "Depth",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html#doc-assets-road-depth"
        },
        {
            "Key": "OffsetAlongNormal",
            "Type": "Float32",
            "DefaultValue": 0.0,
            "Description": "Distance along the terrain surface normal to move each road vertex. This is the same as the vertical offset legacy road property.",
            "Variable": "OffsetAlongNormal",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html#doc-assets-road-offsetalongnormal"
        },
        {
            "Key": "RepeatDistanceScale",
            "Type": "Float32",
            "DefaultValue": 1.0,
            "Description": "Multiplier for how far along the road before texture repeats.",
            "Variable": "OffsetAlongNormal",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html#doc-assets-road-repeatdistancescale"
        },
        {
            "Key": "Chart",
            "Type": "SDG.Unturned.EObjectChart, Assembly-CSharp",
            "DefaultValue": "NONE",
            "Description": "Overrides the material used for this road when rendering the level chart.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html#doc-assets-road-chart",
            "Variable": "chart"
        },
        {
            "Key": "VanillaPhysicsMaterial",
            "Type": "SDG.Unturned.EPhysicsMaterial, Assembly-CSharp",
            "DefaultValue": "NONE",
            "Required": "#PhysicsMaterial.Excluded",
            "Description": "Name of a built-in physics material that will be used for the surface of this road. Use @PhysicsMaterial instead for custom materials.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html#doc-assets-road-vanillaphysicsmaterial",
            "Variable": "UnityPhysicsMaterial",
            "ExclusiveWith": [ "PhysicsMaterial" ]
        },
        {
            "Key": "PhysicsMaterial",
            "Type":
            {
                "Type": "MasterBundleReferenceString",
                "BaseType": "UnityEngine.PhysicMaterial, UnityEngine.PhysicsModule"
            },
            "DefaultValue": null,
            "Required": "#VanillaPhysicsMaterial.Excluded",
            "Description": "Reference to a Physic Material that will be used for the surface of this road. Use @VanillaPhysicsMaterial instead for built-in materials.",
            "Docs": "https://docs.smartlydressedgames.com/en/stable/assets/road-asset.html#doc-assets-road-physicsmaterial",
            "Variable": "UnityPhysicsMaterial",
            "ExclusiveWith": [ "VanillaPhysicsMaterial" ]
        }
    ],
    "Localization":
    [
        {
            "Key": "Name",
            "Type": "String",
            "DefaultValue": "Name",
            "Description": "Localized display name of the road.",
            "Variable": "displayName"
        }
    ],
    "BundleAssets":
    [
        {
            "Key": "Texture",
            "Type": "UnityEngine.Texture2D, UnityEngine.CoreModule",
            "RedirectableAssetKey": "TexturePath",
            "Description": "The diffuse texture used on the surface of the road.",
            "Required": true,
            "Variable": "RoadTexture"
        }
    ]
}