{
  "name": "unturned-data-file-lsp",
  "displayName": "Unturned Data File Format",
  "description": "LSP for the Unturned Data File format.",
  "author": "DanielWillett",
  "publisher": "DanielWillett",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanielWillett/unturned-asset-file-vscode"
  },
  "license": "GPL-3.0-only",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "unturned-dat",
        "aliases": [ "Unturned Data File", "unturned-dat", "unturned-data-file", "Unturned Asset File" ],
        "extensions": [ ".dat", ".asset", ".vdf", ".tool" ],
        "configuration": "./language-configuration.json",
        "firstLine": "^\\/+\\s*udat-.*:\\s*(?:.*)\\s*$",
        "filenames": [ "Config_EasyDifficulty.txt", "Config_NormalDifficulty.txt", "Config_HardDifficulty.txt", "Config.txt", "Level.hierarchy", "Visibility.config" ] 
      }
    ],
    "grammars": [
      {
        "language": "unturned-dat",
        "scopeName": "source.unturned-dat",
        "path": "./syntaxes/unturned-dat.tmLanguage.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "unturnedDataFile.assetProperties",
          "name": "Asset Properties"
        }
      ]
    },
    "commands": [
      {
        "command": "unturnedDataFile.assetProperties.refreshAssetProperties",
        "title": "Refresh Asset Properties",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "unturnedDataFile.cursorMoveTo",
        "title": "Move Cursor To"
      },
      {
        "command": "unturnedDataFile.addProperty",
        "title": "Add Property"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "unturnedDataFile.assetProperties.refreshAssetProperties",
          "when": "view == unturnedDataFile.assetProperties",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "unturnedDataFile.assetProperties.refreshAssetProperties",
          "when": "editorLangId == unturned-dat"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "^9.0.1"
  }
}
